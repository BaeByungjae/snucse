#!/usr/bin/env ruby
require 'zlib'
require 'diffy'

print 'Compiling ... '
msg = `javac BigInteger.java 2>&1`
unless $?.success?
  puts "Failed\n\n\e[33m#{msg}\n\e[31mCompile Error\e[0m"
  exit 1
end
puts 'Done'

print 'Testing ... '
actual = `gzcat big.1.in.gz | java BigInteger`
expected = Zlib::GzipReader.open('big.1.out.gz').read
unless actual == expected
  puts 'Failed'
  puts ''
  puts Diffy::Diff.new(expected, actual)
  exit 1
end
puts 'Succeeded'
